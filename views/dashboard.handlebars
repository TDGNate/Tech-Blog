<div class="page dashboard">
	<div class="container">
		<h1>Dashboard</h1>

		<hr />

		<h2>Create Post</h2>
		<p>Welcome! Wanna create a post?</p>

		{{! Creating a new Post  }}

		<form action="/api/post" method="post" class="container-sub">
			{{! Title  }}
			<label for="post title">Title:</label>
			<input
				placeholder="Post Title..."
				type="text"
				class="dashboard-post-create-title"
				name="title"
			/>
			{{! Content  }}
			<label for="post message">Message:</label>
			<textarea
				class="dashboard-post-create-content"
				type="text"
				placeholder="Message..."
				name="content"
				maxlength="480"
			></textarea>
			{{! Submit Button  }}
			<input 
			type="submit" 
			id="createPostBtn" 
			value="Submit!" 
			class="btn" />
		</form>

		<hr />

		<h2>Your Posts</h2>
		<p>Everything you've shared!</p>

		<div class="container-sub">

			{{! Dashboard Cards  }}
			{{#each posts as |post|}}
				{{> dashCard}}
			{{/each}}

		</div>

	</div>
</div>