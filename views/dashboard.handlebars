<div class="dashboard">
	<div class="container">
		<h2>Dashboard</h2>
		<p>Welcome! Wanna create a post?</p>

		<hr />

		{{! Creating a new Post  }}

		<form class="container-sub">
			{{! Title  }}
			<label for="post title">Title:</label>
			<input
				placeholder="Post Title..."
				type="text"
				class="dashboard-post-create-title"
			/>
			{{! Content  }}
			<label for="post message">Message:</label>
			<textarea
				class="dashboard-post-create-content"
				type="text"
				placeholder="Message..."
			></textarea>
			{{! Submit Button  }}
			<input type="submit" id="createPostBtn" value="Submit!" />
		</form>

	</div>
</div>