<div class="page login">
	<div class="container">
		<h1>Tech Blog</h1>

		<hr />
		<h2>Log in to your account</h2>
		<p>Let's get you in!</p>

		{{! form  }}

		<form action="/api/user/login" method="POST" class="container-sub">
			{{! Email  }}
			<label for="email">Email:</label>
			<input
				type="email"
				class="login-form-email"
				placeholder="clem@gmail.com"
				name="email"
			/>
			{{! Password  }}
			<label for="password">Password:</label>
			<input
				type="password"
				class="login-form-password"
				placeholder="Enter Password..."
				name="password"
			/>
			{{! Send Button }}
			<input type="submit" id="loginFormSubmit" value="Sign In!" class="btn" />

			<p class="sign-up">Don't have an account?
				<a href="/sign-up">Sign up!</a></p>
		</form>

	</div>
</div>